{{#each}}
  <div class="{{messageClass}}">
    {{!-- <span class="avatar-small">{{we-avatar userId=fromId.id}}</span> --}}
    <span class="avatar-small cursor-pointer" {{action 'openProfile' creatorId}}>
      {{user-avatar user=creator imgWidth='50'}}
    </span>
    <span class="message">{{{content}}}</span>
    <div class="message-footer">
      <span class="createdAt">
        {{{format-date createdAt}}}
      </span>
    </div>
  </div>
{{/each}}